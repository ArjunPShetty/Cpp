#include <stdio.h>
void fun(int n);
int main() 
{
    int n=5;
    fun(n);
    printf("%d",n);
    return 0;
}
void fun(int n)
{
    n=6;
}

5

#include <stdio.h>
void fun(int *p);
int main() 
{
    int n=5;
    fun(&n);
    printf("%d",n);
    return 0;
}
void fun(int *p)
{
    *p=6;
}

6


#include <stdio.h>
struct student
{
    int roll_no;
    float percentage;
    char section;
};
int main() 
{
    struct student s1;
    s1.roll_no=21;
    s1.percentage=95.2;
    s1.section='A';
    printf("Roll no:%d\n",s1.roll_no);
    printf("Percentage:%f\n",s1.percentage);
    printf("Section:%c\n",s1.section);
}
Roll no:21
Percentage:95.199997
Section:A

#include <stdio.h>
union student
{
    int roll_no;
    float percentage;
    char section;
};
int main() 
{
    union student s1;
    s1.roll_no=21;
    printf("Roll no:%d\n",s1.roll_no);
    s1.percentage=95.2;
    s1.section='A';
    printf("Roll no:%d\n",s1.roll_no);
    printf("Percentage:%f\n",s1.percentage);
    printf("Section:%c\n",s1.section);
    printf("Percentage:%f\n",s1.percentage);
}
Roll no:1119774273
Percentage:95.199715
Section:A